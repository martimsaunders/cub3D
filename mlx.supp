# ============================================
# Valores não inicializados (writev)
# ============================================

{
   writev_uninit_xcb
   Memcheck:Param
   writev(vector[...])
   fun:writev
   obj:*/libxcb.so*
}

{
   writev_uninit_X11
   Memcheck:Param
   writev(vector[...])
   fun:writev
   ...
   obj:*/libX11.so*
}

{
   writev_uninit_generic
   Memcheck:Param
   writev(vector[...])
   fun:writev
   fun:_XSend
}

